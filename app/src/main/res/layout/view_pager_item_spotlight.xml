<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="spotlight"
            type="com.messiasjunior.digiointerfaceclone.model.SpotlightItem" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/default_card_vertical_margin"
        android:layout_marginLeft="@dimen/view_pager_margin"
        android:layout_marginRight="@dimen/view_pager_margin"
        app:cardCornerRadius="@dimen/default_card_radius"
        app:cardElevation="@dimen/default_card_elevation">

        <androidx.appcompat.widget.AppCompatImageView
            imageUrl="@{ spotlight.bannerURL }"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.card.MaterialCardView>
</layout>