<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="imageUrl"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/product_card_margin"
        app:cardCornerRadius="@dimen/default_card_radius"
        app:cardElevation="@dimen/default_card_elevation">

        <androidx.appcompat.widget.AppCompatImageView
            imageUrl="@{ imageUrl }"
            android:layout_margin="@dimen/product_image_margin"
            android:layout_width="@dimen/product_image_size"
            android:layout_height="@dimen/product_image_size" />

    </com.google.android.material.card.MaterialCardView>
</layout>